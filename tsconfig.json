{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "paths": {
            "@company/*": [
                "company/*"
            ],
            "@device/*": [
                "device/*"
            ],
            "@general/*": [
                "general/*"
            ],
            "@purchase/*": [
                "purchase/*"
            ]
        },
        "target": "es5",
        "declaration": true,
        "declarationDir": "./dist",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "strict": true
    },
    "include": [
        "src/**/*"
    ]
}